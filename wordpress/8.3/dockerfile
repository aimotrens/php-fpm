FROM php:8.3-fpm@sha256:1ad61e1fa97b020ac13f9ef508a9ec8fba2eb2de7bd2c8d3d20f0045ac67d9e7

RUN apt-get update && \
    apt-get install -y \
    libpng-dev \
    libzip-dev \
    zip \
    libmagickwand-dev \
    --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

RUN docker-php-ext-install \
    exif \
    mysqli \
    gd \
    zip && \
    printf "\n" | pecl install imagick && \
    docker-php-ext-enable imagick
