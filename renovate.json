{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true,
            "addLabels": ["automerge"],
            "ignoreTests": true
        },
        {
            "matchFileNames": [
                "**/8.2/**"
            ],
            "matchPackageNames": [
                "php-fpm"
            ],
            "allowedVersions": "/^8.2.*/"
        },
        {
            "matchFileNames": [
                "**/8.3/**"
            ],
            "matchPackageNames": [
                "php-fpm"
            ],
            "allowedVersions": "/^8.3.*/"
        }
    ]
}