{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "local>aimotrens/renovate-defaults"
    ],
    "packageRules": [
        {
            "matchPackageNames":["php"],
            "pinDigests": true
        },
        {
            "matchFileNames": [
                "**/8.2/**"
            ],
            "allowedVersions": "/^8.2.*/"
        },
        {
            "matchFileNames": [
                "**/8.3/**"
            ],
            "allowedVersions": "/^8.3.*/"
        }
    ]
}
