FROM php:8.3-fpm@sha256:618ea047810f36a97d26ca2812293e7c6f863bc6b1b92039e21d42b104f633e1

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libcurl4-openssl-dev \
    libevent-dev \
    libfreetype6-dev \
    libicu-dev \
    libjpeg-dev \
    libldap2-dev \
    libmcrypt-dev \
    libmemcached-dev \
    libpng-dev \
    libpq-dev \
    libxml2-dev \
    libmagickwand-dev \
    libzip-dev \
    libwebp-dev \
    libgmp-dev && \
    rm -rf /var/lib/apt/lists/*

RUN docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp

RUN docker-php-ext-install \
    bcmath \
    exif \
    gd \
    intl \
    ldap \
    opcache \
    pcntl \
    pdo_mysql \
    pdo_pgsql \
    zip \
    gmp

RUN pecl install \
    APCu \
    memcached \
    redis \
    imagick

RUN docker-php-ext-enable \
    apcu \
    memcached \
    redis \
    imagick && \
    rm -r /tmp/pear

ADD ./www.conf /usr/local/etc/php-fpm.d/www.conf
